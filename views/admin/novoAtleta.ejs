<%- include('../partials/header.ejs') %>
<body>
    <div class="container">
        <div class="card mt-4">
            <div class="card-header">
                <h1>Cadastro de Altletas</h1>
            </div>
            <div class="card-body">
                <form action="/cadastrar/atleta" method="POST">
                    <label for="nome">Digite o Nome</label>
                    <input type="text" name="nome" placeholder="Digite o Nome" class="form-control mb-4">

                    <label for="email">Digite o E-mail</label>
                    <input type="email" class="form-control mb-4" name="email" placeholder="Digite o E-mail">

                    <label for="cpf">Digite o CPF</label>
                    <input type="text" class="form-control mb-4" name="cpf" placeholder="Digite o CPF">

                    <label for="numcelular">Digite o número de Celular</label>
                    <input type="tel" class="form-control mb-4" name="numcelular" placeholder="Digite o número de Celular">

                    <label for="dan">Graduação</label>
                    <select name="dan" class="form-control mb-4">
                        <option value="padrao" selected>Escolha a Graduação</option>
                        <% dans.forEach((dan)=>{ %>

                            <option value="<%= dan.id %>"><%= dan.nome %></option>

                        <% }) %>
                    </select>

                    <label for="nascimento">Data de Nascimento</label>
                    <input type="date" name="nascimento" class="form-control mb-4">

                    <button class="btn btn-success btn-block">Cadastrar</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('../partials/footer.ejs') %>