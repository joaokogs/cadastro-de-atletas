<%- include('../partials/header.ejs') %>
<body>
    <div class="container " style="max-width: 30rem;">
        <div class="card mt-5 border-info">
  
                

            <div class="card-body d-flex align-items-center justify-content-center" style="flex-direction: column;">
                <h2 class="card-title"><%= atleta.nome %></h2>
                <h5 class="card-subtitle mb-2 text-muted">Gradução: <%= dan.nome %></h5>

                <h6 class="card-text"><%= dataNascimento.toLocaleDateString()%> - <%= atleta.idade %> anos</h6>
                <h6 class="card-text">E-mail: <%= atleta.email %></h6>
                <h6 class="card-text">Celular: <%= atleta.numcelular %></h6>
                <h6 class="card-text">CPF: <%= atleta.cpf %></h6>
            </div>
            <div class="d-flex align-items-center justify-content-center mb-4 container">
                <a href="/admin/atleta/edit/<%= atleta.id %>" class="btn btn-primary mr-2">Editar</a>
                    <form action="/atleta/deletar" method="POST" style="display: inline;" class="ml-2" onsubmit="confirmDel(event,this)">
                    <input type="hidden" name="id" value="<%= atleta.id %>">
                    <button class="btn btn-danger">Deletar</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('../partials/footer.ejs') %>
<script>

    function confirmDel(event, form){
        event.preventDefault()
        let decision = confirm("Você deseja mesmo deletar esse Atleta?");
        if(decision){
            form.submit();
        } 
    }

</script>